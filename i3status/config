general {
    interval = 2
}

order += "load"
load {
	format = "LOAD: %1min"
}

order += "wireless wlp2s0"
wireless wlp2s0 {
	format_up = "wlp2s0: (%quality at %essid) %ip"
	format_down = "wlp2s0 down"
}

order += "volume master"
volume master {
	format = "VOL: %volume" 
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

order += "battery all"
battery all {
	format = "BAT: %percentage (%remaining)"
	integer_battery_capacity = true
	low_threshold = 15
	threshold_type = percentage
}

order += "tztime local"
tztime local {
	format = "%h-%d %H:%M"
}
